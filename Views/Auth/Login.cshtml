@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Login | Mobile Survey Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/assets/images/logo-mnc.png">

    <!-- App css -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/app.min.css" rel="stylesheet" type="text/css" />
    <link href="~/js/sweetalert2/sweetalert2.min.css" />
    <script>

        function getBranch(value) {
            if (value == null) {
                value = document.getElementById("nik").value;
            }

            $.ajax({
                url: '@Url.Action("GetBranch", "Account")',
                type: "GET",
                data: { "value": value },
                success: function (result) {
                    $("#branch").html(result);
                }
            });
        }

        $(function() {
            var message = '@ViewBag.Message';
            if (message  != '')
                swal({ title: "Check!", text: message , icon: "error" });

        });

    </script>
</head>

<body class="account-body accountbg">
    <!-- Log In page -->
    <div id="app" class="container">
        <div class="row vh-100 d-flex justify-content-center">
            <div class="col-12 align-self-center">
                <div class="row">
                    <div class="col-lg-5 mx-auto">
                        <div class="card">
                            <div class="card-body p-0 auth-header-box">
                                <div class="text-center p-3">
                                    <a href="index.html" class="logo logo-admin">
                                        <img src="~/assets/images/logo-mncf-white.png" height="50" alt="logo" class="auth-logo">
                                    </a>
                                    <h5 class="mt-3 mb-1 font-weight-semibold text-white font-15">Log In to Digital Dashboard</h5>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <ul class="nav-border nav nav-pills" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active font-weight-semibold" data-toggle="tab" href="#LogIn_Tab" role="tab">Log In</a>
                                    </li>
                                </ul>
                                <!-- Tab panes -->
                                <div class="tab-content">
                                    <div class="tab-pane active p-3" id="LogIn_Tab" role="tabpanel">
                                        <form class="form-horizontal auth-form" id="frmlogin" method="POST" action="@Url.Action("LoginAccount", "Account")">
                                            <div class="form-group mb-2">
                                                <label for="nik">NIK</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control" name="nik" id="nik" onchange="getBranch(this.value)" placeholder="Masukan NIK">
                                                </div>
                                            </div><!--end form-group-->

                                            <div class="form-group mb-2">
                                                <label for="password">Password</label>
                                                <div class="input-group">
                                                    <input type="password" class="form-control" name="password" id="password" placeholder="Masukan password">
                                                </div>
                                            </div><!--end form-group-->

                                            <div class="form-group mb-2">
                                                <label for="branch">Branch</label>
                                                <div class="input-group">
                                                    <select id="branch" name="branch" class="form-control">
                                                    </select>
                                                </div>
                                            </div><!--end form-group-->

                                            <div class="form-group row my-3">
                                                <div class="col-sm-12 text-right">
                                                    @*<a href="auth-recover-pw.html" class="text-muted font-13"><i class="dripicons-lock"></i> Lupa password?</a>*@
                                                </div><!--end col-->
                                            </div><!--end form-group-->

                                            <div class="form-group mb-0 row">
                                                <div class="col-12">
                                                    <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Log In <i class="fas fa-sign-in-alt ml-1"></i></button>
                                                </div><!--end col-->
                                            </div> <!--end form-group-->
                                        </form><!--end form-->
                                    </div>
                                </div>
                            </div><!--end card-body-->
                            <div class="card-body bg-light-alt text-center">
                                <span class="text-muted d-none d-sm-inline-block">MNC Finance © 2021</span>
                            </div>
                        </div><!--end card-->
                    </div><!--end col-->
                </div><!--end row-->
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-->
    <!-- End Log In page -->
    <!-- jQuery  -->
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="~/assets/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/waves.js"></script>
    <script src="~/assets/js/feather.min.js"></script>
    <script src="~/assets/js/simplebar.min.js"></script>
    <script src="~/js/sweetalert2/sweetalert2.all.min.js"></script>
    @if (TempData["alert"] != null)
    {
    <script>
        Swal.fire("Failed!", "@TempData["alert"]", "error");
    </script>
    }
</body>
</html>